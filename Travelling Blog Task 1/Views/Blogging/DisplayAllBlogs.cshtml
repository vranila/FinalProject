@model List<BlogTask.Models.BlogsTable>

@{
    ViewBag.Title = "DisplayAllBlogs";
}


<style>
        .container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            height:500px;
        }

        .rows {
            background-color: honeydew;
            border-radius: 10px;
            margin: 4px;
            color:black;
        }
        .class{
            text-align:justify;
        }

        @*img {
            border-radius: 7px;
            height: 180px;
            width: 200px;
