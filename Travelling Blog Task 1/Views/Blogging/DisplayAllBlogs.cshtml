</style>


  <div class="Blogs">
    <h2>Yours Blogs</h2>
   </div>
<div class="container">
    @foreach (var blogs in Model)
    {

        <div class="rows">
            <h4>Blog ID : @blogs.BlogId</h4>
            <h4>Blog Title: @blogs.BlogTitle</h4>
            <img src="@blogs.images" width="200" height="200" />
            <div class="message"><h4><i>@blogs.messages</i></h4></div>
            <h4>Rating : @blogs.ratings</h4>
